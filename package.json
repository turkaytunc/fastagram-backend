{
  "name": "fastagram-backend",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/server.js",
  "scripts": {
    "test": "jest",
    "test:dev": "jest --watchAll --coverage",
    "lint": "eslint . --ext .js,.ts",
    "start": "tsc -p . && node dist/server.js",
    "build": "tsc -p .",
    "dev": "nodemon -L server.ts",
    "compose:dev:up": "docker-compose -f docker-compose.dev.yml up",
    "compose:dev:test": "docker-compose -f docker-compose.dev.yml up postgresdb",
    "compose:dev:down": "docker-compose -f docker-compose.dev.yml down -v",
    "compose:prod:up": "docker-compose -f docker-compose.prod.yml up --force-recreate -d",
    "compose:prod:down": "docker-compose -f docker-compose.prod.yml down"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:turkaytunc/fastagram-backend.git"
  },
  "keywords": [
    "instagram",
    "fullstack",
    "react",
    "typescript"
  ],
  "author": "Türkay Tunç",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^26.6.2",
    "@types/bcrypt": "^3.0.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.0.1",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.4.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "typescript": "^4.2.4"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.(ts|tsx)"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules"
    ],
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    }
  }
}
